    <!-- [ content ] Start -->
    <div class="container-fluid flex-grow-1 container-p-y">
      <div class="d-flex">
          <div class=" flex-grow-1"><h4 class="font-weight-bold py-3 mb-0">獎項列表</h4></div>
          <div class=""><%= link_to '<button type="button" class="btn btn-primary btn-glow-primary"><span class="ion ion-md-add"></span>&nbsp;  新增獎項</button>'.html_safe, new_prize_path %></div>
      </div>

        <div class="card">
            <div class="card-datatable table-responsive">
                <table id="report-table" class="table mb-0">
                  <thead class="thead-light">
                      <tr>
                        <th>獎項</th>
                        <th>名額</th>
                        <th>已抽名額</th>
                        <th></th>
                      </tr>
                  </thead>
                  <tbody>
                    <% @prizes.each do |prize| %>
                      <tr>
                        <td class="align-middle">
                          <p class="m-0 d-inline-block align-middle font-16">
                              <a href="/prizes/<%=prize.id%>" class="text-body"><%=prize.title%></a>
                          </p>
                        </td>
                        <td class="align-middle">
                          <%= prize.quantity%>
                        </td>
                        <td class="align-middle">
                          <%= prize.fulfilled_quantity%>
                        </td>

                        <td class="table-action">
                          <a href="/prizes/<%=prize.id%>" class="btn btn-icon btn-outline-primary"><i class="feather icon-eye"></i></a>
                          <a href="/prizes/<%=prize.id%>/edit" class="btn btn-icon btn-outline-success"><i class="feather icon-edit"></i></a>
                        </td>
                      </tr>
                    <%end%>
                  </tbody>
              </table>
            </div>
        </div>
    </div>
    <!-- [ content ] End -->
