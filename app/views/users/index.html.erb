<script type="text/javascript">
  function activeUser(obj, user_id) {
    if (confirm("確定要手動更新嗎？")) {
      $.ajax({
        type:"PUT",
        url:"/users/"+user_id,
        dataType:"json",
        data: {user: { active: true}},
        success:function(result){
          $(obj).parent().parent().children('.isActive').html('是');
          $(obj).hide();
          alert('更新成功');
        }
      })
    }
  }
</script>
<div class="container-fluid flex-grow-1 container-p-y">
      <div class="d-flex">
          <div class=" flex-grow-1"><h4 class="font-weight-bold py-3 mb-0">員工列表</h4></div>
      </div>

        <div class="card">
            <div class="card-datatable table-responsive">
                <table id="report-table" class="table mb-0">
                  <thead class="thead-light">
                      <tr>
                        <th>部門</th>
                        <th>姓名</th>
                        <th>員工編號</th>
                        <th>是否已登入</th>
                        <th>手動登入</th>
                      </tr>
                  </thead>
                  <tbody>
                    <% @users.each do |user| %>
                      <tr class='userItem'>
                        <td class="align-middle">
                          <%=user.department%></a>
                        </td>
                        <td class="align-middle">
                          <%= user.name%>
                        </td>
                        <td class="align-middle">
                          <%= user.user_number%>
                        </td>
                        <td class="align-middle isActive">
                          <% if user.active %>
                            是
                          <% else %>
                            否
                          <% end %>
                        </td>
                        <td class="table-action">
                          <% if !user.active%>
                            <a onclick="activeUser(this, <%=user.id%>)" class="btn btn-icon btn-outline-success"><i class="feather icon-edit"></i></a>
                          <% end %>
                        </td>
                      </tr>
                    <%end%>
                  </tbody>
              </table>
            </div>
        </div>
    </div>
